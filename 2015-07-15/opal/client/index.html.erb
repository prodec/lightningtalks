<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Draw Something</title>

    <style type="text/css" media="screen">
     #drawing-ui {
       width: 640px;
       height: 840px;
     }

     #drawing-ui > * {
       margin-left: 20px;
       margin-right: 20px;
     }

     #color-selector {
       height: 50px;
       border-bottom: solid 1px lightgray;
     }

     #color-selector .color-box {
       height: 40px;
       width: 40px;
       float: left;
       margin-left: 18px;
       margin-top: 3px;
     }

     #color-selector .color-box.selected {
       border-radius: 5px 5px;
       border: solid 2px black;
     }

     #color-selector .color-box .color {
       border-radius: 50%;
       width: 30px;
       height: 30px;
       margin-left: 5px;
       margin-top: 5px;
     }

     #turn {
       background: linear-gradient(to bottom, #1acef2 0%, #17b9e1 50%, #12a1d4 100%);
       color: white;
       float: left;
       width: 80px;
       height: 80px;
     }

     #word {
       background: linear-gradient(to bottom, #ffea9b 0%, #ffd768 100%);
       height: 80px;
     }

     #word > * {
       padding-left: 20px;
       padding-top: 30px;
     }

    </style>
  </head>

  <body>
    <div id="drawing-ui">
      <div id="info">
        <div id="turn">
          23
        </div>

        <div id="word">
          You are drawing <span id="current-word">SOMETHING</span>
        </div>
      </div>

      <div id="color-selector">
      </div>

      <canvas id="board" width="600" height="600">
      </canvas>
    </div>

    <div id="presence">
    </div>
  </body>

  <%= javascript_include_tag "application" %>
</html>
